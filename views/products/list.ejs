<%- include('../partials/header') %>

<div class="container">
  <div class="products-page">
    <aside class="filters-sidebar">
      <h3>Filters</h3>
      <form action="/products" method="GET" id="filter-form">
        <div class="filter-section">
          <h4>Categories</h4>
          <% categories.forEach(category => { %>
            <label>
              <input type="radio" name="category" value="<%= category.slug %>"
                <%= query.category === category.slug ? 'checked' : '' %>>
              <%= category.name %>
            </label>
          <% }) %>
        </div>

        <div class="filter-section">
          <h4>Price Range</h4>
          <input type="number" name="minPrice" placeholder="Min" value="<%= query.minPrice || '' %>">
          <input type="number" name="maxPrice" placeholder="Max" value="<%= query.maxPrice || '' %>">
        </div>

        <div class="filter-section">
          <h4>Brand</h4>
          <% brands.slice(0, 10).forEach(brand => { %>
            <label>
              <input type="radio" name="brand" value="<%= brand %>"
                <%= query.brand === brand ? 'checked' : '' %>>
              <%= brand %>
            </label>
          <% }) %>
        </div>

        <div class="filter-section">
          <h4>Rating</h4>
          <label>
            <input type="radio" name="minRating" value="4"
              <%= query.minRating === '4' ? 'checked' : '' %>>
            4 stars & up
          </label>
          <label>
            <input type="radio" name="minRating" value="3"
              <%= query.minRating === '3' ? 'checked' : '' %>>
            3 stars & up
          </label>
        </div>

        <button type="submit" class="btn btn-primary">Apply Filters</button>
        <a href="/products" class="btn btn-secondary">Clear Filters</a>
      </form>
    </aside>

    <div class="products-content">
      <div class="products-header">
        <h1>All Products</h1>
        <div class="sort-options">
          <label>Sort by:</label>
          <select name="sort" onchange="window.location.href='?sort=' + this.value + '<%= query.category ? '&category=' + query.category : '' %>'">
            <option value="newest" <%= query.sort === 'newest' ? 'selected' : '' %>>Newest</option>
            <option value="popular" <%= query.sort === 'popular' ? 'selected' : '' %>>Most Popular</option>
            <option value="price-asc" <%= query.sort === 'price-asc' ? 'selected' : '' %>>Price: Low to High</option>
            <option value="price-desc" <%= query.sort === 'price-desc' ? 'selected' : '' %>>Price: High to Low</option>
            <option value="rating" <%= query.sort === 'rating' ? 'selected' : '' %>>Highest Rated</option>
          </select>
        </div>
      </div>

      <% if (!products || products.length === 0) { %>
        <div class="no-products">
          <p>No products found matching your criteria.</p>
        </div>
      <% } else { %>
        <div class="products-grid">
          <% products.forEach(product => { %>
            <div class="product-card">
              <a href="/products/<%= product.slug %>">
                <div class="product-image">
                  <img src="<%= product.images[0]?.url || '/images/placeholder.jpg' %>" alt="<%= product.name %>">
                  <% if (product.salePrice) { %>
                    <span class="badge sale-badge">Sale</span>
                  <% } %>
                  <% if (product.stock <= product.lowStockThreshold) { %>
                    <span class="badge stock-badge">Low Stock</span>
                  <% } %>
                </div>
                <div class="product-info">
                  <h3><%= product.name %></h3>
                  <p class="product-category">
                    <%= product.category && product.category.name ? product.category.name : 'Uncategorized' %>
                  </p>
                  <div class="product-rating">
                    <span class="stars">★★★★★</span>
                    <span class="rating-text">
                      <%= product.averageRating || 0 %> (<%= product.reviewCount || 0 %>)
                    </span>
                  </div>
                  <div class="product-price">
                    <% if (product.salePrice) { %>
                      <span class="original-price">$<%= product.price.toFixed(2) %></span>
                      <span class="sale-price">$<%= product.salePrice.toFixed(2) %></span>
                    <% } else { %>
                      <span class="price">$<%= product.price.toFixed(2) %></span>
                    <% } %>
                  </div>
                </div>
              </a>
              <button class="btn btn-primary add-to-cart-btn" data-product-id="<%= product._id %>">Add to Cart</button>
            </div>
          <% }) %>
        </div>

        <% if (totalPages > 1) { %>
          <div class="pagination">
            <% if (currentPage > 1) { %>
              <a href="?page=<%= currentPage - 1 %><%= query.category ? '&category=' + query.category : '' %><%= query.sort ? '&sort=' + query.sort : '' %>" class="btn">Previous</a>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
              <% if (i === currentPage) { %>
                <span class="current-page"><%= i %></span>
              <% } else if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) { %>
                <a href="?page=<%= i %><%= query.category ? '&category=' + query.category : '' %><%= query.sort ? '&sort=' + query.sort : '' %>"><%= i %></a>
              <% } else if (i === currentPage - 3 || i === currentPage + 3) { %>
                <span>...</span>
              <% } %>
            <% } %>

            <% if (currentPage < totalPages) { %>
              <a href="?page=<%= currentPage + 1 %><%= query.category ? '&category=' + query.category : '' %><%= query.sort ? '&sort=' + query.sort : '' %>" class="btn">Next</a>
            <% } %>
          </div>
        <% } %>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>