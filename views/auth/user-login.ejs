<%- include('../partials/header') %>
<div style="display:flex; gap:8px; margin-bottom:12px;margin-left:10%">
      <a href="/auth/login-seller" class="btn btn-secondary" style="padding:6px 10px; font-size:0.9rem;">Seller</a>
      <a href="/auth/login" class="btn btn-secondary" style="padding:6px 10px; font-size:0.9rem;">General</a>
    </div>
<div class="container">
  <div class="auth-form">
    <h1>Login</h1>
    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>
    <form action="/auth/login" method="POST">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" required>
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
    <p class="auth-link">Don't have an account? <a href="/auth/register">Register here</a></p>
  </div>
</div>

<%- include('../partials/footer') %>
